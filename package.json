{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "export NODE_ENV=development; bun run build",
    "lint": "turbo lint:css lint:fmt lint:js lint:ts",
    "lint:css": "stylelint '**/*.{css,xcss}'",
    "lint:fmt": "dprint check",
    "lint:js": "eslint",
    "lint:ts": "tsc --build --noEmit",
    "test": "bun test",
    "test:node": "uvu packages '\\/test\\/.+\\.test-node\\.js$'",
    "test:node:c8": "c8 uvu packages '\\/test\\/.+\\.test-node\\.js$'"
  },
  "devDependencies": {
    "@types/bun": "1.1.12",
    "@types/node": "22.8.1",
    "c8": "10.1.2",
    "esbuild": "0.24.0",
    "@eslint/js": "9.32.0",
    "@maxmilton/eslint-config": "0.2.1",
    "@maxmilton/stylelint-config": "0.4.0",
    "dprint": "0.50.1",
    "eslint": "9.32.0",
    "eslint-plugin-unicorn": "60.0.0",
    "postcss-ekscss": "workspace:*",
    "typescript": "5.5.3",
    "typescript-eslint": "7.16.0",
    "stylelint": "16.23.0",
    "stylelint-config-standard": "39.0.0",
    "turbo": "2.5.5",
    "uvu": "0.5.6"
  },
  "packageManager": "bun@1.99.0"
}
