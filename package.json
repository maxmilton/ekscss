{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "export NODE_ENV=development; bun run build",
    "lint": "turbo lint:css lint:fmt lint:js lint:ts",
    "lint:css": "stylelint '**/*.{css,xcss}'",
    "lint:fmt": "dprint check",
    "lint:js": "eslint",
    "lint:ts": "tsc --build --noEmit",
    "test": "bun test",
    "test:node": "uvu packages '\\/test\\/.+\\.test-node\\.js$'",
    "test:node:c8": "c8 npm run test:node"
  },
  "devDependencies": {
    "@eslint/js": "9.32.0",
    "@maxmilton/eslint-config": "0.2.1",
    "@maxmilton/stylelint-config": "0.4.2",
    "@maxmilton/test-utils": "0.0.12",
    "@types/bun": "1.2.19",
    "@types/node": "24.1.0",
    "c8": "10.1.3",
    "dprint": "0.50.1",
    "ekscss": "workspace:*",
    "eslint": "9.32.0",
    "eslint-plugin-unicorn": "60.0.0",
    "postcss-ekscss": "workspace:*",
    "stylelint": "16.23.0",
    "stylelint-config-standard": "39.0.0",
    "turbo": "2.5.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.38.0",
    "uvu": "0.5.6"
  },
  "packageManager": "bun@1.99.0"
}
