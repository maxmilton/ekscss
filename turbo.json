{
  "$schema": "node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "//#lint:css": { "cache": false },
    "//#lint:fmt": { "cache": false },
    "//#lint:js": { "cache": false },
    "//#lint:ts": { "cache": false },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "outputLogs": "new-only"
    },
    "dev": { "persistent": true, "cache": false }
  },
  "globalDependencies": ["package.json"],
  "globalEnv": ["CI", "GITHUB_ACTIONS", "NODE_ENV"],
  "noUpdateNotifier": true
}
