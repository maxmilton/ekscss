{
  "name": "@ekscss/framework",
  "version": "0.0.54",
  "description": "Progressive CSS framework powered by ekscss",
  "repository": "maxmilton/ekscss",
  "homepage": "https://ekscss.js.org",
  "author": "Max Milton <max@bunnybunny.org>",
  "license": "MIT",
  "main": "level2.xcss",
  "exports": {
    ".": "./level2.xcss",
    "./level1.xcss": "./level1.xcss",
    "./level2.xcss": "./level2.xcss",
    "./level3.xcss": "./level3.xcss",
    "./addon/*": "./addon/*",
    "./level1/*": "./level1/*",
    "./level2/*": "./level2/*",
    "./config": {
      "types": "./config.d.mts",
      "default": "./config.mjs"
    },
    "./utils": {
      "types": "./utils.d.mts",
      "default": "./utils.mjs"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "*.xcss",
    "addon",
    "config.d.mts",
    "config.mjs",
    "dist",
    "level1",
    "level2",
    "utils.d.mts",
    "utils.mjs"
  ],
  "scripts": {
    "build": "bun run build-levels && bun run build-addons",
    "build-addons": "for f in $(basename -s .xcss addon/*.xcss); do xcss -qm addon/$f.xcss dist/addon/$f.css; done",
    "build-levels": "for f in level1 level2 level3; do xcss -qm $f.xcss dist/$f.css; done",
    "postbuild": "tsc --emitDeclarationOnly",
    "prebuild": "rm -rf dist *.d.mts",
    "test": "xcss test/test.xcss /dev/null"
  },
  "peerDependencies": {
    "ekscss": "workspace:^"
  },
  "peerDependenciesMeta": {
    "ekscss": {
      "optional": true
    }
  },
  "dependencies": {
    "@ekscss/plugin-apply": "workspace:^",
    "@ekscss/plugin-import": "workspace:^",
    "@ekscss/plugin-prefix": "workspace:^",
    "color": "^5.0.0",
    "cssremedy": "github:jensimmons/cssremedy#af14bf3",
    "dset": "^3.1.4"
  },
  "devDependencies": {
    "@ekscss/cli": "workspace:*",
    "ekscss": "workspace:*"
  },
  "engines": {
    "node": ">=14"
  }
}
